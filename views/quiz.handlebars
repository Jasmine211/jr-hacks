<h1>Take our quiz!</h1>

<form action="/quiz" id="question1" method="POST">
  {{! question1 }}
    <p class="question">{{question1.question}}</p>
    <input type="radio" id="radio1" name="answer1" value="answer1" />
    <label for="radio1"> {{question1.choices.[0]}}</label>
    <br />
    <input type="radio" id="radio2" name="answer1" value="answer2" />
    <label>{{question1.choices.[1]}}
    </label>
    <br />

    <input type="radio" id="radio3" name="answer1" value="answer3" />
    <label> {{question1.choices.[2]}} </label>
    <br />
    <button type="submit">Submit</button>
</form>
{{#if explanation1}}
  {{#if correct}}
    <p>Correct!</p>
  {{else}}
    <p>Oops, Wrong Answer</p>
  {{/if}}
